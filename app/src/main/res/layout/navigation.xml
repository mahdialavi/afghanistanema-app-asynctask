<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="right">
    <android.support.design.widget.NavigationView
        android:layout_width="match_parent"
        android:id="@+id/navigation"
        android:layout_height="match_parent"
        android:layout_gravity="right">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#b9151c"
                android:layoutDirection="rtl" />

            <LinearLayout
                android:layout_width="match_parent"
                android:background="#b9151c"
                android:orientation="horizontal"
                android:gravity="right"
                android:id="@+id/btnregister"
                android:layout_height="60dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtsignIn"
                    android:gravity="right"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="0dp"
                    android:textColor="#ffffff"
                    android:textSize="17dp"
                    android:text="ورود/ثبت نام"

                    />

                <ImageView
                    android:layout_width="37dp"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:src="@drawable/lock"
                    android:layout_marginRight="8dp"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/userEmail"
                android:gravity="right"
                android:visibility="gone"
                android:background="#F5363E"
                android:paddingBottom="20dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/basket"
                    android:textColor="#ffffff"
                    android:layout_marginRight="20dp"
                    android:textSize="18dp"
                    android:text="خرید"

                    />

                <TextView
                    android:textColor="#ffffff"
                    android:layout_marginRight="20dp"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/exit"
                    android:text="خروج"

                    />


            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#700202"
                android:textSize="24dp"
                android:padding="8dp"
                android:layout_gravity="right"
                android:layout_marginRight="24dp"
                android:text="بخش ها" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dcdada" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#242121"
                android:textSize="18dp"
                android:id="@+id/txtafgnews"
                android:padding="8dp"
                android:layout_gravity="right"
                android:layout_marginRight="24dp"
                android:text=" اخبار افغانستان و جهان" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#242121"
                android:id="@+id/txtmohajerin"
                android:textSize="18dp"
                android:padding="8dp"
                android:layout_gravity="right"
                android:layout_marginRight="24dp"
                android:text=" اخبار مهاجرین" />
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/txtvariousnews"
                android:layout_height="wrap_content"
                android:textColor="#242121"
                android:textSize="18dp"
                android:padding="8dp"
                android:layout_gravity="right"
                android:layout_marginRight="24dp"
                android:text="اخبار گوناگون " />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#242121"
                android:textSize="18dp"
                android:id="@+id/txtsport"
                android:padding="8dp"
                android:layout_gravity="right"
                android:layout_marginRight="24dp"
                android:text="اخبارورزشی افغانستان" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#242121"
                android:textSize="18dp"

                android:id="@+id/txtscience"
                android:padding="8dp"
                android:layout_gravity="right"
                android:layout_marginRight="24dp"
                android:text="علم و فناوری" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#242121"
                android:textSize="18dp"

                android:id="@+id/Email"
                android:padding="8dp"
                android:layout_gravity="right"
                android:layout_marginRight="24dp"
                android:text="تماس با ما" />












        </LinearLayout>

    </android.support.design.widget.NavigationView>

</LinearLayout>